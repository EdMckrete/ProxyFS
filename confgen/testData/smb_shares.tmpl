{{/* Declare our global variables.  Need Go 1.11+ */}}
{{ if .AdDisabled }}
	.AdDisabledCommentStr = ";"
	.AdIDCommentStr = ";"
{{ else }}
	.AdDisabledCommentStr = ""
	.AdIDCommentStr = ""
{{ end }}
#============================ Share Definitions ==============================

{{range .Volumes}}

[{{ .Name }}]
	comment = ProxyFS volume {{ .Name }}
	path = {{ .Path }}
	proxyfs:volume = {{ .VolumeName }}
	valid users = {{ .ValidUsers }}
	public = yes
	writable = yes
	printable = no
	browseable = {{ if .Browseable }}yes{{- else }}no{{-end }}
	oplocks = False
	level2 oplocks = False
	aio read size = 1
	aio write size = 1
	case sensitive = yes
	preserve case = yes
	short preserve case = yes
	strict sync = {{ if .StrictSync }}yes{{- else }}no{{- end }}
{{ if .AuditLogging }}
	full_audit:success = mkdir rmdir read pread write pwrite rename unlink
	full_audit:prefix = %u|%I|%m|%S
	full_audit:failure = mkdir rmdir read pread write pwrite rename unlink
	full_audit:syslog = false
	vfs objects = full_audit proxyfs
{{- else }}
	vfs objects = proxyfs
{{- end }}
{{ if .EncryptionRequired }}
	smb encrypt = required
{{ end }}

{{end}} {{/* End of range loop */}}